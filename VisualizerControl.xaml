<UserControl x:Class="VisuAIlizer.VisualizerToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="10" RowDefinitions="Auto, Auto, *" VerticalAlignment="Stretch">

        <!-- Row 1 - Select Project Location -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="BtnSelectProject"
                    Content="Select Project Location"
                    Width="200"
                    Height="30"
                    Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Row 2 - Code Flow + Architecture Diagram buttons -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,0,0,10">
            <Button x:Name="BtnCodeFlow"
                    Content="Code Flow"
                    Width="150"
                    Height="30"
                    Margin="0,0,10,0"/>

            <Button x:Name="BtnArchitecture"
                    Content="Architecture Diagram"
                    Width="200"
                    Height="30"/>
        </StackPanel>

        <!-- Row 3 - WebView2 container -->
        <Border Grid.Row="2"
                BorderBrush="Gray"
                BorderThickness="1">
            <wv2:WebView2 x:Name="WebPanel" />
        </Border>

    </Grid>
</UserControl>
