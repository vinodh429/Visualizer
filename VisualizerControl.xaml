<UserControl x:Class="VisuAIlizer.ToolWindow.VisualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Height="450" Width="800">
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6" HorizontalAlignment="Left">
      <Button x:Name="BtnSelectProject" Content="Select Project Location" Margin="4" Width="160"/>
      <Button x:Name="BtnUseOpenProjects" Content="Use Open Projects" Margin="4" Width="140"/>
      <Button x:Name="BtnCodeFlow" Content="Code Flow" Margin="4" Width="100"/>
      <Button x:Name="BtnArchitecture" Content="Architecture Diagram" Margin="4" Width="160"/>
      <TextBlock x:Name="TxtStatus" Margin="8,8,0,0" VerticalAlignment="Center"/>
    </StackPanel>

    <Grid>
      <!-- WebView2 hosted here -->
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid>
        <wv2:WebView2 x:Name="WebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
      </Grid>
    </Grid>
  </DockPanel>
</UserControl>
